<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:padding="4dp"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="407dp"
            android:layout_height="39dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center_horizontal"
            android:text="@string/checkout_symps"
            android:textAlignment="center"
            android:textColor="#C036383A"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.709"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/block" />

        <ImageView
            android:id="@+id/none"
            android:layout_width="120dp"
            android:layout_height="27dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="67dp"
            android:background="@drawable/none"
            app:layout_constraintStart_toStartOf="@+id/ladyr"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <ImageView
            android:id="@+id/ladyr"
            android:layout_width="130dp"
            android:layout_height="216dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/ladyr"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/none" />



        <ImageView
        android:id="@+id/block"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:background="@drawable/block"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/next"
            android:layout_width="330dp"
            android:layout_height="90dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center_horizontal"
            android:text="@string/symptoms15"
            android:textColor="#ffffff"
            android:textSize="65dp"
            app:layout_constraintEnd_toEndOf="@+id/block"
            app:layout_constraintStart_toStartOf="@+id/block"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ladyl"
            android:layout_width="222dp"
            android:layout_height="318dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ladyl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <ImageView
        android:id="@+id/safe"
        android:layout_width="419dp"
        android:layout_height="419dp"
        android:layout_marginTop="148dp"
        android:background="@drawable/safe"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <ImageView
        android:id="@+id/danger"
        android:layout_width="419dp"
        android:layout_height="419dp"
        android:layout_marginTop="148dp"
        android:background="@drawable/danger"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <ImageView
        android:id="@+id/notsafe"
        android:layout_width="419dp"
        android:layout_height="419dp"
        android:layout_marginTop="148dp"
        android:background="@drawable/notsafe"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <ImageView
        android:id="@+id/onverge"
        android:layout_width="419dp"
        android:layout_height="419dp"
        android:layout_marginTop="148dp"
        android:background="@drawable/onverge"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />




        <ImageView
            android:id="@+id/question"
            android:layout_width="419dp"
            android:layout_height="419dp"
            android:layout_marginTop="146dp"
            android:background="@drawable/question"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />


        <TextView
            android:id="@+id/textView27"
            android:layout_width="137dp"
            android:layout_height="45dp"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="36dp"

            android:layout_marginTop="6dp"
            android:background="@drawable/butt3"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center
"
            android:text="@string/continue15"
            android:textColor="#ffffff"
            android:textSize="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout9" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="137dp"
            android:layout_height="45dp"

            android:layout_marginTop="6dp"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"
            android:background="@drawable/butt2"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center
"
            android:text="@string/reset15"
            android:textColor="#ffffff"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout9" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout9"
            android:layout_width="15dp"
            android:layout_height="251dp"
            android:layout_marginTop="67dp"
            app:layout_constraintEnd_toStartOf="@+id/ladyr"
            app:layout_constraintStart_toEndOf="@+id/ladyl"
            app:layout_constraintTop_toBottomOf="@+id/textView14">

            <Button
                android:id="@+id/head2"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:background="#FF0000"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/head"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginTop="8dp"
                android:background="#FF0000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/parent"
                app:layout_constraintTop_toBottomOf="@+id/head2" />

            <Button
                android:id="@+id/fever"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginTop="8dp"
                android:background="#FF0000"
                app:layout_constraintStart_toEndOf="@+id/parent"
                app:layout_constraintTop_toBottomOf="@+id/head" />

            <Button
                android:id="@+id/cough"
                android:layout_width="wrap_content"
                android:layout_height="27dp"

                android:layout_marginTop="8dp"
                android:background="#FF0000"
                app:layout_constraintStart_toEndOf="@+id/parent"
                app:layout_constraintTop_toBottomOf="@+id/fever" />

            <Button
                android:id="@+id/breath"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginTop="12dp"
                android:background="#FF0000"
                app:layout_constraintStart_toEndOf="@+id/parent"
                app:layout_constraintTop_toBottomOf="@+id/cough" />

            <Button
                android:id="@+id/shaking"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginTop="8dp"
                android:background="#FF0000"
                app:layout_constraintStart_toEndOf="@+id/parent"
                app:layout_constraintTop_toBottomOf="@+id/breath" />

            <Button
                android:id="@+id/dir"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginTop="10dp"
                android:background="#FF0000"
                app:layout_constraintStart_toEndOf="@+id/parent"
                app:layout_constraintTop_toBottomOf="@+id/shaking"
                tools:ignore="UnknownId" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>