<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:padding="4dp"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/head2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="47dp"
            android:background="#FF0000"
            app:layout_constraintEnd_toStartOf="@+id/ladyr"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/ladyl"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <Button
            android:id="@+id/cough"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="148dp"
            android:background="#FF0000"
            app:layout_constraintStart_toEndOf="@+id/ladyl"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <Button
            android:id="@+id/breath"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="188dp"
            android:background="#FF0000"
            app:layout_constraintEnd_toStartOf="@+id/ladyr"
            app:layout_constraintStart_toEndOf="@+id/ladyl"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="407dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Checkout for Coronvirus Symptoms"
        android:textColor="#C036383A"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.709"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/block"
        android:gravity="center_horizontal" />

    <ImageView
        android:id="@+id/block"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:background="@drawable/block"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/next"
            android:layout_width="330dp"
            android:layout_height="90dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center_horizontal"
            android:text="Symptoms"
            android:textColor="#ffffff"
            android:textSize="65dp"
            app:layout_constraintEnd_toEndOf="@+id/block"
            app:layout_constraintStart_toStartOf="@+id/block"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ladyl"
            android:layout_width="250dp"
            android:layout_height="355dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ladyl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <ImageView
            android:id="@+id/ladyr"
            android:layout_width="130dp"
            android:layout_height="216dp"
            android:layout_marginTop="68dp"
            android:background="@drawable/ladyr"
            app:layout_constraintStart_toEndOf="@+id/cough"
            app:layout_constraintTop_toTopOf="@+id/ladyl" />

        <ImageView
            android:id="@+id/none"
            android:layout_width="119dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/none"
            app:layout_constraintBottom_toTopOf="@+id/ladyr"
            app:layout_constraintStart_toEndOf="@+id/head2" />

        <ImageView
        android:id="@+id/safe"
        android:layout_width="419dp"
        android:layout_height="419dp"
        android:layout_marginTop="148dp"
        android:background="@drawable/safe"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <ImageView
        android:id="@+id/danger"
        android:layout_width="419dp"
        android:layout_height="419dp"
        android:layout_marginTop="148dp"
        android:background="@drawable/danger"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <ImageView
        android:id="@+id/notsafe"
        android:layout_width="419dp"
        android:layout_height="419dp"
        android:layout_marginTop="148dp"
        android:background="@drawable/notsafe"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <ImageView
        android:id="@+id/onverge"
        android:layout_width="419dp"
        android:layout_height="419dp"
        android:layout_marginTop="148dp"
        android:background="@drawable/onverge"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <Button
            android:id="@+id/shaking"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="226dp"
            android:background="#FF0000"
            app:layout_constraintEnd_toStartOf="@+id/ladyr"
            app:layout_constraintStart_toEndOf="@+id/ladyl"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <ImageView
            android:id="@+id/question"
            android:layout_width="419dp"
            android:layout_height="419dp"
            android:layout_marginTop="145dp"
            android:background="@drawable/question"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/butt3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.254"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dir" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="102dp"
        android:layout_height="24dp"
        android:background="@null"
        android:fontFamily="sans-serif-condensed-medium"

        android:gravity="center_horizontal"
        android:text="Continue"
        android:textColor="#ffffff"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

        <Button
            android:id="@+id/dir"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="262dp"
            android:background="#FF0000"
            app:layout_constraintEnd_toStartOf="@+id/ladyr"
            app:layout_constraintStart_toStartOf="@+id/breath"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <Button
            android:id="@+id/head"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="80dp"
            android:background="#FF0000"
            app:layout_constraintEnd_toStartOf="@+id/ladyr"
            app:layout_constraintStart_toEndOf="@+id/ladyl"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <Button
            android:id="@+id/fever"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="116dp"
            android:background="#FF0000"
            app:layout_constraintEnd_toStartOf="@+id/ladyr"
            app:layout_constraintStart_toEndOf="@+id/ladyl"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/butt2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dir" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="74dp"
        android:layout_height="24dp"
        android:background="@null"
        android:fontFamily="sans-serif-condensed-medium"

        android:gravity="center_horizontal"
        android:text="Reset"
        android:textColor="#ffffff"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView12"
        app:layout_constraintEnd_toEndOf="@+id/imageView12"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="@+id/imageView12"
        app:layout_constraintTop_toTopOf="@+id/imageView12" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>