<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:layout_width="match_parent"
    android:padding="4dp"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/block"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center_horizontal"
                android:text="@string/profile17"
                android:textAlignment="center"
                android:textColor="#FFFCFC"
                android:textSize="65sp" />
            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="308dp"
                android:layout_height="120dp"
                android:background="#00FBF9F9"
                app:srcCompat="@drawable/organisation"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/volunteerName"
                android:layout_width="234dp"
                android:layout_height="58dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="@string/hello_n_volunteer17"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="23sp" />

            <Button
                android:layout_width="148dp"
                android:layout_height="73dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:background="@drawable/butt1"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="@string/del"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/volunteerSignout"
                android:layout_width="148dp"
                android:layout_height="73dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/buttonblue"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="@string/sign_out17"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="80sp"/>




        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>