<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="4dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:background="@drawable/block"
                android:textColor="#FFFFFF"
                android:textSize="45sp"
                android:text="@string/register1" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/det1"
                android:textAlignment="center"
                android:gravity="center_horizontal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="@string/name1"
                android:textColor="#0478FF"
                android:textSize="25sp"/>

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/enter_name"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                 />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="@string/em1"
                android:textColor="#0478FF"
                android:textSize="25sp"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/enter_email_here1"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="@string/password1"
                android:textColor="#0478FF"
                android:textSize="25sp"/>


            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/enter_new_password_here"
                android:ems="10"
                android:inputType="textPassword"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:importantForAutofill="no" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="@string/age00"
                android:textColor="#0478FF"
                android:textSize="25sp"/>

            <EditText
                android:id="@+id/age"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:hint="@string/age_here1"
                android:ems="10"
                android:inputType="number"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>
